# =============================================================================
# NusaNexus Trading Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL
# Development: http://localhost:8000 or http://localhost:3001
# Staging: https://api-staging.nusanexus.com
# Production: https://api.nusanexus.com
VITE_API_BASE_URL=http://localhost:8000

# WebSocket URL for real-time data
# Development: ws://localhost:8000/ws or ws://localhost:3001/ws
# Staging: wss://ws-staging.nusanexus.com
# Production: wss://ws.nusanexus.com
VITE_WS_URL=ws://localhost:8000/ws

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (safe for client-side)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Secret for token validation (if handled client-side)
VITE_JWT_SECRET=your-jwt-secret-key

# Session timeout (minutes)
VITE_SESSION_TIMEOUT=60

# Enable/disable authentication features
VITE_ENABLE_AUTH=true

# =============================================================================
# Trading Configuration
# =============================================================================

# Default trading environment
# Values: demo, live
VITE_TRADING_MODE=demo

# MetaTrader 5 connection (if using MT5 integration)
VITE_MT5_SERVER=your-mt5-server
VITE_MT5_LOGIN=your-mt5-login
VITE_MT5_PASSWORD=your-mt5-password

# Risk management defaults
VITE_DEFAULT_RISK_LEVEL=medium
VITE_MAX_RISK_PER_TRADE=2
VITE_MAX_DAILY_LOSS=10

# =============================================================================
# AI & Analytics
# =============================================================================

# AI Analysis API endpoints
VITE_AI_ANALYSIS_URL=http://localhost:8000/ai

# Enable/disable AI features
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_AI_RECOMMENDATIONS=true

# AI model configuration
VITE_AI_MODEL_VERSION=v1.0
VITE_AI_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# External Services
# =============================================================================

# Market data providers
VITE_MARKET_DATA_PROVIDER=internal
VITE_MARKET_DATA_API_KEY=your-market-data-api-key

# News and sentiment analysis
VITE_NEWS_API_KEY=your-news-api-key
VITE_SENTIMENT_API_URL=http://localhost:8000/sentiment

# =============================================================================
# Development & Debugging
# =============================================================================

# Environment mode
NODE_ENV=development

# Enable debug mode
VITE_DEBUG_MODE=true

# Enable API logging
VITE_ENABLE_API_LOGGING=true

# Enable WebSocket logging
VITE_ENABLE_WS_LOGGING=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Mock API mode (for development without backend)
VITE_USE_MOCK_API=false

# =============================================================================
# PWA & Mobile
# =============================================================================

# Enable PWA features
VITE_ENABLE_PWA=true

# Enable push notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# VAPID keys for push notifications
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Google Analytics
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Sentry for error tracking
VITE_SENTRY_DSN=your-sentry-dsn

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
VITE_ENABLE_STRATEGY_BUILDER=true
VITE_ENABLE_BACKTESTING=true
VITE_ENABLE_SOCIAL_TRADING=false
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_MOBILE_TRADING=true

# =============================================================================
# Localization
# =============================================================================

# Default language
VITE_DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
VITE_AVAILABLE_LANGUAGES=en,id,zh

# =============================================================================
# Performance
# =============================================================================

# Bundle size limits
VITE_MAX_BUNDLE_SIZE=500

# Cache settings
VITE_CACHE_DURATION=300000

# WebSocket reconnection settings
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# =============================================================================
# Testing
# =============================================================================

# Test environment settings
VITE_TEST_API_URL=http://localhost:8001
VITE_TEST_WS_URL=ws://localhost:8001/ws
VITE_ENABLE_TEST_MODE=false

# =============================================================================
# Build Configuration
# =============================================================================

# Build target
VITE_BUILD_TARGET=production

# Enable source maps in production
VITE_ENABLE_SOURCE_MAPS=false

# CDN URL for assets
VITE_CDN_URL=https://cdn.nusanexus.com

# =============================================================================
