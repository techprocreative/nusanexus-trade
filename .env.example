# - PUT /trading/orders/:id
# - DELETE /trading/orders/:id
# - GET /trading/positions
# - GET /trading/portfolio
# - GET /market/data
# - GET /market/symbols
# - POST /strategies
# - GET /strategies
# - PUT /strategies/:id
# - DELETE /strategies/:id
# - POST /ai/analysis
# - GET /ai/recommendations
# 
# Required WebSocket Events:
# - price_update
# - order_update
# - position_update
# - portfolio_update
# - market_news
# - ai_signal
# 
# See BACKEND_INTEGRATION.md for detailed specifications
# =============================================================================